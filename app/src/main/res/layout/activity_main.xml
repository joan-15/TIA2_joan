<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/entrada_angulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa el ángulo (en grados)"
        android:inputType="numberDecimal"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/entrada_lado1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa el lado 1 del triángulo"
        android:inputType="numberDecimal"
        android:layout_below="@id/entrada_angulo"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/entrada_lado2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa el lado 2 del triángulo"
        android:inputType="numberDecimal"
        android:layout_below="@id/entrada_lado1"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/boton_calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_below="@id/entrada_lado2"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/triangulo" />

</RelativeLayout>
